<script type="text/javascript">
	$(document).ready(function(){
		$(".thumbWrap a").hover(function() {
			$(this).next(".tooltipThumbs").animate({opacity: "show", top: "-175"}, "normal");
			}, function() {
				$(this).next(".tooltipThumbs").animate({opacity: "hide", top: "-200"}, "fast");
			
		});
	});
</script>
