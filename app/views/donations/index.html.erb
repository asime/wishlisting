<h1>Listing donations</h1>

<table>
  <tr>
    <th>Fname</th>
    <th>Lname</th>
    <th>Amount</th>
    <th>Street1</th>
    <th>Street2</th>
    <th>City</th>
    <th>State</th>
    <th>Postal</th>
    <th>Email</th>
    <th>Phone</th>
    <th>Processed</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @donations.each do |donation| %>
  <tr>
    <td><%= donation.fname %></td>
    <td><%= donation.lname %></td>
    <td><%= donation.amount %></td>
    <td><%= donation.street1 %></td>
    <td><%= donation.street2 %></td>
    <td><%= donation.city %></td>
    <td><%= donation.state %></td>
    <td><%= donation.postal %></td>
    <td><%= donation.email %></td>
    <td><%= donation.phone %></td>
    <td><%= donation.processed %></td>
    <td><%= link_to 'Show', donation %></td>
    <td><%= link_to 'Edit', edit_donation_path(donation) %></td>
    <td><%= link_to 'Destroy', donation, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

